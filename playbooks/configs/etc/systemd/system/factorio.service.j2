[Unit]
Description=Server daemon for factorio

[Service]
Type=forking
User=factorio
KillMode=none
ExecStart=/usr/bin/screen -dmS factorio /bin/bash -c "/factorio/0.17.79/factorio/bin/x64/factorio --server-settings /factorio/server-settings.json --start-server /factorio/world.zip"
ExecStop=/usr/local/bin/factoriod.sh /quit

[Install]
WantedBy=multi-user.target